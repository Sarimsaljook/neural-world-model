{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nwm.local/schemas/memory.schema.json",
  "title": "NWM Memory Record Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["record_id", "timestamp_ns", "kind", "payload"],
  "properties": {
    "record_id": { "type": "string", "minLength": 1 },
    "timestamp_ns": { "type": "integer", "minimum": 0 },

    "kind": {
      "type": "string",
      "enum": ["episodic", "semantic", "spatial", "rule"]
    },

    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },

    "environment_id": { "type": ["string", "null"] },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1, "default": 1.0 },

    "payload": {
      "type": "object",
      "additionalProperties": true,
      "description": "Kind-specific content. See defs for common optional shapes."
    },

    "extras": { "type": "object", "additionalProperties": true }
  },

  "$defs": {
    "embedding": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 1
    },
    "erfg_snapshot_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": ["state_version", "summary_embed"],
      "properties": {
        "state_version": { "type": "integer", "minimum": 0 },
        "summary_embed": { "$ref": "#/$defs/embedding" }
      }
    },
    "rule_prior": {
      "type": "object",
      "additionalProperties": false,
      "required": ["operator_name", "prior_params", "updated_from_surprise"],
      "properties": {
        "operator_name": { "type": "string", "minLength": 1 },
        "prior_params": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": { "type": "number" }
          }
        },
        "updated_from_surprise": { "type": "boolean" },
        "surprise_value": { "type": ["number", "null"] }
      }
    }
  }
}
